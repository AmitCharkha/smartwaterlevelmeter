<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.vem_tooling.smartwaterlevelmonitor.font_text_view.CorisandeBoldTextView
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Setting"
            android:layout_height="wrap_content" />

        <com.vem_tooling.smartwaterlevelmonitor.font_text_view.LatoLightItalicTextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <com.vem_tooling.smartwaterlevelmonitor.font_text_view.CorisandeBoldTextView
        android:id="@+id/alarmSetting"
        android:layout_width="match_parent"
        android:text="Alarm Setting"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="5dp"
        android:layout_height="1dp" />

    <com.vem_tooling.smartwaterlevelmonitor.font_text_view.CorisandeBoldTextView
        android:id="@+id/setRtc"
        android:layout_width="match_parent"
        android:text="Set Real Time Clock"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="5dp"
        android:layout_height="1dp" />


    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_height="match_parent" />
</LinearLayout>