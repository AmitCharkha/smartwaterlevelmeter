<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="History"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password3"
                android:layout_width="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginTop="20dp"

                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tankNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:typeface="serif"
                    android:ems="8"
                    android:inputType="numberSigned"
                    android:hint="EnterTank Number" />

            </android.support.design.widget.TextInputLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent">



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password1"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/startValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:typeface="serif"
                        android:ems="6"
                        android:layout_margin="5dp"
                        android:inputType="numberSigned"
                        android:hint="Start Value" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password2"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/endValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:typeface="serif"
                        android:ems="6"
                        android:inputType="numberSigned"
                        android:hint="End Value" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <Button
                android:id="@+id/callAPI"
                android:layout_width="wrap_content"
                android:text="Call APi"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/responseTextView"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </ScrollView>
</LinearLayout>