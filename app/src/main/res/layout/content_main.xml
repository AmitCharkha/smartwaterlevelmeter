<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vem_tooling.smartwaterlevelmonitor.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/refreshTextView"
        android:layout_width="wrap_content"
        android:text="Refresh"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_below="@+id/refreshTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayoutOne"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:text="Tank No 1"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp" />

                <com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber
                    android:id="@+id/scroll_number1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content">

                </com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutTwo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:text="Tank No 2"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp" />

                <com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber
                    android:id="@+id/scroll_number2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content">

                </com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutThree"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:text="Tank No 3"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp" />

                <com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber
                    android:id="@+id/scroll_number3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content">

                </com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutFour"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:text="Tank No 4"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp" />

                <com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber
                    android:id="@+id/scroll_number4"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content">

                </com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutFive"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:text="Tank No 5"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp" />

                <com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber
                    android:id="@+id/scroll_number5"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content">

                </com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutSix"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:text="Tank No 6"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp" />

                <com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber
                    android:id="@+id/scroll_number6"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/textView6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content">

                </com.vem_tooling.smartwaterlevelmonitor.scroll_view.MultiScrollNumber>

            </RelativeLayout>


            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
